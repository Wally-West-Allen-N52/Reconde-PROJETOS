<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RVRentAgencia</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    <header>
        <div class="container-fluid">
            <!-- Image and text imagem logotipo aplicada-->
            <nav class="navbar navbar-light bg-light">
                <img src="~/img/LogoRVRent.png" alt="Logotipo RVRent" width="50" height="50">
                <a class="nav-link text-dark" asp-area="" asp-controller="Cliente" asp-action="Index">HOME</a>
                <a class="nav-link text-dark" asp-area="" asp-controller="Destino" asp-action="Index">DESTINO</a>
                <a class="nav-link text-dark" asp-area="" asp-controller="Promocao" asp-action="Index">PROMOÇÕES</a>
                <a class="nav-link text-dark" asp-area="" asp-controller="Contato" asp-action="Index">CONTATO</a>
            </nav>
        </div>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - RVRent - <a asp-area="" asp-controller="Cliente" asp-action="Index">Home</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>