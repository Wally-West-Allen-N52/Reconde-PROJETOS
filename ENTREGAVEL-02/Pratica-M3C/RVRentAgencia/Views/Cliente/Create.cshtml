@model RVRentAgencia.Models.Cliente

@{
    ViewData["Title"] = "Create Cliente";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>Cliente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="form-control" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DestinoId_destino" class="control-label"></label>
                <select asp-for="DestinoId_destino" class ="form-control" asp-items="ViewBag.DestinoId_destino"></select>
            </div>
            <div class="form-group">
                <label asp-for="PromocaoId_promocao" class="control-label"></label>
                <select asp-for="PromocaoId_promocao" class ="form-control" asp-items="ViewBag.PromocaoId_promocao"></select>
            </div>
            <div class="form-group">
                <label asp-for="ContatoId_contato" class="control-label"></label>
                <select asp-for="ContatoId_contato" class ="form-control" asp-items="ViewBag.ContatoId_contato"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Ir para a Lista</a>
</div>

</body>
</html>
