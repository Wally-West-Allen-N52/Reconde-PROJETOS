@model IEnumerable<RVRentAgencia.Models.Cliente>

@{
    ViewData["Title"] = "Index Cliente";
}

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>

<body>
    @* Conteúdo de corpo *@
    <div class="container">
        <div class="row justify-content-md-center">
            <h1 class="row justify-content-md-center display-4">Sua Casa Em Todo Lugar</h1>
            <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-inline w-100" src="~/img/luxury-home-wheels.jpg" class="img-thumbnail"
                            alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-inline w-100" src="~/img/RVRentHome.jpg" class="img-thumbnail" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-inline w-100" src="~/img/black-home-wheels.jpg" class="img-thumbnail"
                            alt="Third slide">
                    </div>
                </div>
                <div class="row justify-content-md-center">
                    <button type="button" class="btn btn-success "><a asp-action="Create">Entrar para
                            Cadastrar</a></button>
                </div>
            </div>
        </div>
    </div>
    @* Conteúdo de corpo *@

    <table class="table">
        @* <thead>
            <tr>
            <th>
            @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
            @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
            @Html.DisplayNameFor(model => model.Destino)
            </th>
            <th>
            @Html.DisplayNameFor(model => model.Promocao)
            </th>
            <th>
            @Html.DisplayNameFor(model => model.Contato)
            </th>
            <th></th>
            </tr>
            </thead> *@
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Destino.Estado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Promocao.Preco)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Contato.Email)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id_Cliente">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.Id_Cliente">Detalhes</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id_Cliente">Deletar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>

</html>
